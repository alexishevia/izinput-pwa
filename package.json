{
  "name": "invoicezero-pwa",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ionic/react": "^5.3.2",
    "@ionic/react-router": "^5.3.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "dexie": "^3.0.2",
    "indexeddbshim": "^6.6.0",
    "ionicons": "^5.1.2",
    "lodash": "^4.17.20",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "recharts": "^1.8.5",
    "uuid": "^8.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test && npm run cleanTests",
    "test:once": "react-scripts test --runInBand --watchAll=false && npm run cleanTests",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache --testTimeout=100000 && npm run cleanTests",
    "cleanTests": "rm ./*.sqlite",
    "eject": "react-scripts eject",
    "lint": "eslint {lib,src}/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test:once"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "serialize-javascript": "^4.0.0"
  }
}
