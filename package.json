{
  "name": "invoicezero-pwa",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ionic/react": "^5.3.1",
    "@ionic/react-router": "^5.3.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "dexie": "^3.0.1",
    "indexeddbshim": "^6.1.0",
    "ionicons": "^5.1.2",
    "lodash": "^4.17.19",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "recharts": "^1.8.5",
    "uuid": "^8.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test && npm run cleanTests",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache --testTimeout=100000 && npm run cleanTests",
    "cleanTests": "rm ./*.sqlite",
    "eject": "react-scripts eject",
    "lint": "eslint {lib,src}/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && react-scripts test --watchAll=false && npm run cleanTests"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "serialize-javascript": "^4.0.0"
  }
}
